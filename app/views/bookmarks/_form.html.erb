<%= form_with model: bookmark, class: "space-y-6" do |f| %>
  <% if bookmark.errors.any? %>
    <div class="rounded border border-red-300 bg-red-50 p-4">
      <h3 class="text-sm font-medium text-red-800 mb-2">
        <%= pluralize(bookmark.errors.count, "error") %> prevented this bookmark from being saved:
      </h3>
      <ul class="list-disc list-inside text-sm text-red-700">
        <% bookmark.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :title,
        required: true,
        autofocus: true,
        placeholder: "e.g. GitHub",
        class: "block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" %>
  </div>

  <div>
    <%= f.label :url, "URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :url,
        required: true,
        type: "url",
        placeholder: "https://example.com",
        class: "block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" %>
    <p class="text-xs text-gray-500 mt-1">https:// will be added automatically if missing</p>
  </div>

  <div>
    <%= f.label :description, "Description (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :description,
        rows: 3,
        placeholder: "A brief description of what this bookmark is about...",
        class: "block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" %>
  </div>

  <div>
    <%= f.label :tag_list, "Tags (comma-separated)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :tag_list,
        placeholder: "dev, tools, reference",
        class: "block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" %>
    <p class="text-xs text-gray-500 mt-1">Separate tags with commas</p>
  </div>

  <div>
    <label class="flex items-center gap-2">
      <%= f.check_box :is_public, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
      <span class="text-sm font-medium text-gray-700">Make this bookmark public</span>
    </label>
    <p class="text-xs text-gray-500 mt-1 ml-6">Public bookmarks can be accessed by anyone with the short URL</p>
  </div>

  <% if bookmark.persisted? %>
    <div>
      <%= f.label :created_at, "Created at", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.datetime_local_field :created_at,
          class: "block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" %>
      <p class="text-xs text-gray-500 mt-1">Change when this bookmark was created</p>
    </div>
  <% end %>

  <div class="flex gap-3 pt-4">
    <%= f.submit class: "rounded bg-blue-600 hover:bg-blue-700 px-6 py-2.5 text-white font-medium cursor-pointer transition-colors" %>
    <%= link_to "Cancel", bookmarks_path, class: "rounded bg-gray-200 hover:bg-gray-300 px-6 py-2.5 text-gray-700 font-medium transition-colors" %>
  </div>
<% end %>
