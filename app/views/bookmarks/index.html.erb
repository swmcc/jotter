<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div>
          <%= link_to dashboard_path, class: "hover:opacity-70" do %>
            <h1 class="text-2xl font-bold text-gray-900">Jotter</h1>
          <% end %>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-700"><%= Current.session.user.email_address %></span>
          <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Page Header -->
    <div class="mb-6 flex items-center justify-between">
      <div>
        <h2 class="text-3xl font-bold text-gray-900">Bookmarks</h2>
        <p class="text-gray-600 mt-1"><%= @bookmarks.count %> bookmarks</p>
      </div>
      <%= link_to "New Bookmark", new_bookmark_path, class: "rounded bg-blue-600 hover:bg-blue-700 px-4 py-2 text-white font-medium transition-colors" %>
    </div>

    <!-- Search and Filter -->
    <div class="mb-6 bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <%= form_with url: bookmarks_path, method: :get, class: "flex gap-4" do |f| %>
        <div class="flex-1">
          <%= f.text_field :q, placeholder: "Search bookmarks...", value: params[:q], class: "block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" %>
        </div>
        <%= f.submit "Search", class: "rounded bg-gray-600 hover:bg-gray-700 px-4 py-2 text-white font-medium cursor-pointer transition-colors" %>
        <% if params[:q].present? || params[:tag].present? %>
          <%= link_to "Clear", bookmarks_path, class: "rounded bg-gray-200 hover:bg-gray-300 px-4 py-2 text-gray-700 font-medium transition-colors" %>
        <% end %>
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
      <!-- Sidebar - Tags -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
          <h3 class="font-semibold text-gray-900 mb-3">Tags</h3>
          <div class="flex flex-wrap gap-2">
            <% @tags.each do |tag| %>
              <%= link_to bookmarks_path(tag: tag.name), class: "inline-block px-3 py-1 text-sm rounded-full #{params[:tag] == tag.name ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} transition-colors" do %>
                <%= tag.name %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Bookmarks List -->
      <div class="lg:col-span-3 space-y-4">
        <% if @bookmarks.any? %>
          <% @bookmarks.each do |bookmark| %>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-5 hover:shadow-md transition-shadow">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <%= link_to bookmark_path(bookmark), class: "group" do %>
                    <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                      <%= bookmark.title %>
                    </h3>
                  <% end %>

                  <% if bookmark.description.present? %>
                    <p class="text-gray-600 text-sm mt-1"><%= bookmark.description %></p>
                  <% end %>

                  <div class="flex items-center gap-4 mt-3 text-sm text-gray-500">
                    <a href="<%= bookmark.url %>" target="_blank" class="hover:text-blue-600 flex items-center gap-1">
                      <span>ðŸ”—</span>
                      <span class="truncate max-w-md"><%= bookmark.url %></span>
                    </a>

                    <span class="flex items-center gap-1">
                      <%= bookmark.is_public ? "ðŸŒ Public" : "ðŸ”’ Private" %>
                    </span>
                  </div>

                  <% if bookmark.tags.any? %>
                    <div class="flex flex-wrap gap-2 mt-3">
                      <% bookmark.tags.each do |tag| %>
                        <%= link_to tag.name, bookmarks_path(tag: tag.name), class: "inline-block px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors" %>
                      <% end %>
                    </div>
                  <% end %>

                  <div class="mt-3 text-xs text-gray-400">
                    Short URL: <%= link_to short_url_url(bookmark.short_code), short_url_path(bookmark.short_code), class: "text-blue-600 hover:underline font-mono" %>
                  </div>
                </div>

                <div class="flex gap-2 ml-4">
                  <%= link_to "Edit", edit_bookmark_path(bookmark), class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
                  <%= button_to "Delete", bookmark_path(bookmark), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-sm text-red-600 hover:text-red-900 underline" %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
            <p class="text-gray-600">No bookmarks found</p>
            <%= link_to "Create your first bookmark", new_bookmark_path, class: "text-blue-600 hover:underline mt-2 inline-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
