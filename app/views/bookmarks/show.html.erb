<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div>
          <%= link_to dashboard_path, class: "hover:opacity-70" do %>
            <h1 class="text-2xl font-bold text-gray-900">Jotter</h1>
          <% end %>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-700"><%= Current.session.user.email_address %></span>
          <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Back Link -->
    <div class="mb-6">
      <%= link_to bookmarks_path, class: "text-gray-600 hover:text-gray-900 flex items-center gap-2" do %>
        <span>‚Üê</span>
        <span>Back to Bookmarks</span>
      <% end %>
    </div>

    <!-- Bookmark Card -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
      <!-- Header -->
      <div class="flex items-start justify-between mb-6">
        <div class="flex-1">
          <h2 class="text-3xl font-bold text-gray-900 mb-2"><%= @bookmark.title %></h2>
          <div class="flex items-center gap-4 text-sm text-gray-500">
            <span class="flex items-center gap-1">
              <%= @bookmark.is_public ? "üåê Public" : "üîí Private" %>
            </span>
            <span>Created <%= @bookmark.created_at.strftime("%d %b %Y") %></span>
          </div>
        </div>
        <div class="flex gap-2">
          <%= link_to "Edit", edit_bookmark_path(@bookmark), class: "rounded bg-blue-600 hover:bg-blue-700 px-4 py-2 text-white font-medium transition-colors" %>
          <%= button_to "Delete", bookmark_path(@bookmark), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "rounded bg-red-600 hover:bg-red-700 px-4 py-2 text-white font-medium transition-colors" %>
        </div>
      </div>

      <!-- URL -->
      <div class="mb-6 p-4 bg-gray-50 rounded border border-gray-200">
        <div class="text-sm text-gray-600 mb-1">URL</div>
        <a href="<%= @bookmark.url %>" target="_blank" class="text-blue-600 hover:underline break-all text-lg flex items-center gap-2">
          <span>üîó</span>
          <span><%= @bookmark.url %></span>
        </a>
      </div>

      <!-- Description -->
      <% if @bookmark.description.present? %>
        <div class="mb-6">
          <div class="text-sm font-medium text-gray-700 mb-2">Description</div>
          <p class="text-gray-900 leading-relaxed"><%= @bookmark.description %></p>
        </div>
      <% end %>

      <!-- Tags -->
      <% if @bookmark.tags.any? %>
        <div class="mb-6">
          <div class="text-sm font-medium text-gray-700 mb-2">Tags</div>
          <div class="flex flex-wrap gap-2">
            <% @bookmark.tags.each do |tag| %>
              <%= link_to tag.name, bookmarks_path(tag: tag.name), class: "inline-block px-3 py-1 text-sm rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors" %>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Short URL -->
      <div class="mt-6 pt-6 border-t border-gray-200">
        <div class="text-sm font-medium text-gray-700 mb-2">Short URL</div>
        <div class="flex items-center gap-3">
          <code class="flex-1 px-3 py-2 bg-gray-50 border border-gray-200 rounded text-sm font-mono text-gray-900">
            <%= short_url_url(@bookmark.short_code) %>
          </code>
          <button onclick="navigator.clipboard.writeText('<%= short_url_url(@bookmark.short_code) %>')" class="rounded bg-gray-600 hover:bg-gray-700 px-4 py-2 text-white text-sm font-medium transition-colors">
            Copy
          </button>
        </div>
        <p class="text-xs text-gray-500 mt-2">Share this short URL to redirect to your bookmark</p>
      </div>

      <!-- Visit Button -->
      <div class="mt-6">
        <a href="<%= @bookmark.url %>" target="_blank" class="block w-full text-center rounded bg-blue-600 hover:bg-blue-700 px-4 py-3 text-white font-medium transition-colors">
          Visit Link ‚Üí
        </a>
      </div>
    </div>
  </main>
</div>
