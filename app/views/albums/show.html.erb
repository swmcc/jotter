<div class="min-h-screen bg-gray-50 flex flex-col">
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <%= link_to root_path, class: "hover:opacity-70" do %>
            <div class="w-10 h-10 text-gray-800">
              <%= image_tag "jotter.svg", class: "w-full h-full" %>
            </div>
          <% end %>
        </div>
        <div class="flex items-center gap-4">
          <% if authenticated? %>
            <span class="text-sm text-gray-700"><%= Current.session.user.email_address %></span>
            <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
          <% else %>
            <%= link_to "Sign in", new_session_path, class: "text-sm text-blue-600 hover:text-blue-900 underline" %>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <main class="flex-1 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
      <%= link_to @album.gallery ? gallery_path(@album.gallery) : albums_path, class: "text-gray-600 hover:text-gray-900 flex items-center gap-2" do %>
        <span>‚Üê</span>
        <span><%= @album.gallery ? "Back to Gallery" : "Back to Albums" %></span>
      <% end %>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 mb-6">
      <div class="flex items-start justify-between mb-4">
        <div class="flex-1">
          <h2 class="text-3xl font-bold text-gray-900 mb-2"><%= @album.title %></h2>
          <div class="flex items-center gap-4 text-sm text-gray-500">
            <span><%= @album.is_public ? "üåê Public" : "üîí Private" %></span>
            <span><%= @album.created_at.strftime("%d %b %Y") %></span>
            <% if @album.gallery %>
              <span>‚Ä¢</span>
              <%= link_to @album.gallery.title, gallery_path(@album.gallery), class: "text-blue-600 hover:underline" %>
            <% end %>
          </div>
        </div>
        <% if authenticated? %>
          <div class="flex gap-2">
            <%= link_to "Edit", edit_album_path(@album), class: "rounded bg-gray-200 hover:bg-gray-300 px-3 py-1.5 text-sm text-gray-700 font-medium transition-colors" %>
            <%= button_to "Delete", album_path(@album), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "rounded bg-red-600 hover:bg-red-700 px-3 py-1.5 text-sm text-white font-medium transition-colors" %>
          </div>
        <% end %>
      </div>

      <% if @album.description.present? %>
        <p class="text-gray-700 leading-relaxed mb-4"><%= @album.description %></p>
      <% end %>

      <% if @album.tags.any? %>
        <div class="flex flex-wrap gap-2">
          <% @album.tags.each do |tag| %>
            <%= link_to tag.name, albums_path(tag: tag.name), class: "inline-block px-3 py-1 text-sm rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if authenticated? %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Upload Media</h3>

        <%= form_with(url: album_photos_path(@album), class: "space-y-4", data: {
          controller: "album-upload",
          album_upload_photo_url_value: album_photos_path(@album),
          album_upload_video_url_value: album_videos_path(@album)
        }) do |form| %>
          <%= form.hidden_field :album_id, value: @album.id %>

          <!-- Drag and Drop Zone -->
          <div
            data-album-upload-target="dropzone"
            class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center transition-colors cursor-pointer hover:border-gray-400">

            <%= form.file_field :image,
                name: "photo[image]",
                required: true,
                accept: "image/jpeg,image/jpg,image/png,image/gif,image/webp,video/mp4,video/quicktime,video/x-msvideo,video/mpeg,video/webm,video/x-m4v,video/x-matroska",
                class: "hidden",
                data: {
                  album_upload_target: "input",
                  action: "change->album-upload#handleFileSelect"
                } %>

            <div class="space-y-3" onclick="this.closest('[data-album-upload-target=dropzone]').querySelector('input[type=file]').click()">
              <div class="text-5xl" data-album-upload-target="icon">üì∏</div>
              <div>
                <p class="text-gray-700 font-medium">Drop your photo or video here or click to browse</p>
                <p class="text-gray-500 text-sm mt-1">Photos: JPG, PNG, GIF, WebP (max 10MB)</p>
                <p class="text-gray-500 text-sm">Videos: MP4, MOV, AVI, MPEG, WebM, MKV (max 500MB)</p>
              </div>

              <!-- Preview -->
              <img data-album-upload-target="preview" class="hidden mx-auto max-h-48 rounded shadow-lg" />

              <!-- Filename -->
              <p data-album-upload-target="filename" class="hidden text-sm text-gray-600 font-mono"></p>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="media_title" class="block text-sm font-medium text-gray-700 mb-2">Title</label>
              <input type="text" name="photo[title]" id="media_title" required
                  placeholder="e.g., Sunset in Paris"
                  class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
            </div>

            <div>
              <label for="media_tag_list" class="block text-sm font-medium text-gray-700 mb-2">Tags</label>
              <input type="text" name="photo[tag_list]" id="media_tag_list"
                  placeholder="sunset, paris (comma-separated)"
                  class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
            </div>
          </div>

          <div>
            <label for="media_description" class="block text-sm font-medium text-gray-700 mb-2">Description (optional)</label>
            <textarea name="photo[description]" id="media_description" rows="2"
                placeholder="Describe this media..."
                class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none"></textarea>
          </div>

          <div class="flex items-center gap-3">
            <input type="checkbox" name="photo[is_public]" id="media_is_public" value="1" <%= @album.is_public ? "checked" : "" %> class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
            <label for="media_is_public" class="text-sm font-medium text-gray-700">Make this public</label>
          </div>

          <div>
            <%= form.submit "Upload", data: { album_upload_target: "submit" }, class: "rounded bg-blue-600 hover:bg-blue-700 px-4 py-2 text-white font-medium cursor-pointer transition-colors" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="mb-6">
      <h3 class="text-2xl font-bold text-gray-900">Media (<%= @photos.count + @videos.count %>)</h3>
    </div>

    <% if @photos.any? || @videos.any? %>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% @photos.each do |photo| %>
          <%= link_to photo_path(photo), class: "group" do %>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
              <div class="aspect-square bg-gray-200 relative overflow-hidden">
                <% if photo.image.attached? %>
                  <%= image_tag photo.thumbnail, class: "w-full h-full object-cover" %>
                <% end %>
              </div>
              <div class="p-2">
                <p class="text-sm font-medium text-gray-900 group-hover:text-blue-600 transition-colors truncate">
                  <%= photo.title %>
                </p>
              </div>
            </div>
          <% end %>
        <% end %>

        <% @videos.each do |video| %>
          <%= link_to video_path(video), class: "group" do %>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
              <div class="aspect-square bg-gray-800 relative overflow-hidden">
                <% if video.poster.attached? %>
                  <%= image_tag video.poster, class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center text-white text-4xl">üé¨</div>
                <% end %>
                <% if video.processing? %>
                  <div class="absolute inset-0 bg-black/50 flex items-center justify-center">
                    <span class="text-white text-sm font-medium">Processing...</span>
                  </div>
                <% elsif video.formatted_duration %>
                  <div class="absolute bottom-2 right-2 bg-black/70 text-white text-xs px-1.5 py-0.5 rounded">
                    <%= video.formatted_duration %>
                  </div>
                <% end %>
              </div>
              <div class="p-2">
                <p class="text-sm font-medium text-gray-900 group-hover:text-blue-600 transition-colors truncate">
                  <%= video.title %>
                </p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
        <p class="text-gray-600">No media in this album yet</p>
        <% if authenticated? %>
          <p class="text-gray-500 text-sm mt-2">Use the upload form above to add photos or videos</p>
        <% end %>
      </div>
    <% end %>
  </main>

  <%= render "shared/footer" %>
</div>
