<%= form_with(model: album.new_record? && album.gallery ? [album.gallery, album] : album, class: "space-y-6") do |form| %>
  <% if album.errors.any? %>
    <div class="rounded bg-red-50 border border-red-200 p-4">
      <h3 class="text-red-800 font-semibold mb-2"><%= pluralize(album.errors.count, "error") %> prohibited this album from being saved:</h3>
      <ul class="list-disc list-inside text-red-700 text-sm">
        <% album.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :gallery_id %>

  <div>
    <%= form.label :title, "Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :title,
        required: true,
        autofocus: true,
        placeholder: "e.g., Paris Photos",
        class: "block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" %>
  </div>

  <div>
    <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :description,
        rows: 4,
        placeholder: "Describe this album...",
        class: "block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" %>
  </div>

  <div>
    <%= form.label :tag_list, "Tags", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :tag_list,
        value: album.tag_list,
        placeholder: "vacation, paris, 2024 (comma-separated)",
        class: "block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" %>
    <p class="text-xs text-gray-500 mt-1">Separate tags with commas</p>
  </div>

  <div class="flex items-center gap-3">
    <%= form.check_box :is_public, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
    <%= form.label :is_public, "Make this album public", class: "text-sm font-medium text-gray-700" %>
  </div>

  <div class="flex gap-3">
    <%= form.submit class: "rounded bg-blue-600 hover:bg-blue-700 px-4 py-2 text-white font-medium cursor-pointer transition-colors" %>
    <%= link_to "Cancel", album.persisted? ? album_path(album) : (album.gallery ? gallery_path(album.gallery) : albums_path), class: "rounded bg-gray-200 hover:bg-gray-300 px-4 py-2 text-gray-700 font-medium transition-colors" %>
  </div>
<% end %>
