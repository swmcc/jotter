<div class="min-h-screen bg-gray-50 flex flex-col">
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div>
          <%= link_to root_path, class: "hover:opacity-70" do %>
            <h1 class="text-4xl">üìì</h1>
          <% end %>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-700"><%= Current.session.user.email_address %></span>
          <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
        </div>
      </div>
    </div>
  </header>

  <main class="flex-1 max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
      <%= link_to @album.gallery ? gallery_path(@album.gallery) : albums_path, class: "text-gray-600 hover:text-gray-900 flex items-center gap-2" do %>
        <span>‚Üê</span>
        <span><%= @album.gallery ? "Back to Gallery" : "Back to Albums" %></span>
      <% end %>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">New Album</h2>
      <%= render "form", album: @album %>
    </div>
  </main>

  <%= render "shared/footer" %>
</div>
