<div class="min-h-screen bg-gray-50 flex flex-col">
  <!-- Header -->
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <%= link_to root_path, class: "hover:opacity-70" do %>
            <h1 class="text-4xl">ğŸ““</h1>
          <% end %>
          <p class="text-sm text-gray-600">Images and bookmarks</p>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-700"><%= Current.session.user.email_address %></span>
          <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-1 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <!-- Galleries Card -->
      <%= link_to galleries_path, class: "block" do %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow cursor-pointer">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold text-gray-900">Galleries</h2>
            <span class="text-3xl">ğŸ–¼ï¸</span>
          </div>
          <p class="text-gray-600 text-sm mb-4">Organise photos into albums and galleries</p>
          <div class="flex items-center justify-between">
            <span class="text-blue-600 font-medium text-sm">View all â†’</span>
            <span class="text-2xl font-bold text-gray-900"><%= @galleries_count %></span>
          </div>
        </div>
      <% end %>

      <!-- Bookmarks Card -->
      <%= link_to bookmarks_path, class: "block" do %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow cursor-pointer">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold text-gray-900">Bookmarks</h2>
            <span class="text-3xl">ğŸ”–</span>
          </div>
          <p class="text-gray-600 text-sm mb-4">Save and organise web links with tags</p>
          <div class="flex items-center justify-between">
            <span class="text-blue-600 font-medium text-sm">View all â†’</span>
            <span class="text-2xl font-bold text-gray-900"><%= @bookmarks_count %></span>
          </div>
        </div>
      <% end %>

      <%= link_to bookmarklet_path, class: "block mt-4" do %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 hover:bg-blue-100 transition-colors">
          <p class="text-sm text-blue-900 text-center">
            <span class="font-medium">ğŸ’¡ Tip:</span> Install the browser bookmarklet for one-click saving â†’
          </p>
        </div>
      <% end %>

      <div class="grid grid-cols-2 gap-4 mt-4">
        <%= link_to uploads_path, class: "block" do %>
          <div class="bg-green-50 border border-green-200 rounded-lg p-4 hover:bg-green-100 transition-colors">
            <p class="text-sm text-green-900 text-center">
              <span class="font-medium">ğŸ“¸ Upload</span><br/>
              <span class="text-xs">Quick photo upload</span>
            </p>
          </div>
        <% end %>

        <%= link_to view_uploads_path, class: "block" do %>
          <div class="bg-purple-50 border border-purple-200 rounded-lg p-4 hover:bg-purple-100 transition-colors">
            <p class="text-sm text-purple-900 text-center">
              <span class="font-medium">ğŸ‘€ View</span><br/>
              <span class="text-xs">My quick uploads</span>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Quick Stats -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Stats</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div>
          <p class="text-sm text-gray-600">Galleries</p>
          <p class="text-2xl font-bold text-gray-900"><%= @galleries_count %></p>
        </div>
        <div>
          <p class="text-sm text-gray-600">Albums</p>
          <p class="text-2xl font-bold text-gray-900"><%= @albums_count %></p>
        </div>
        <div>
          <p class="text-sm text-gray-600">Photos</p>
          <p class="text-2xl font-bold text-gray-900"><%= @photos_count %></p>
        </div>
        <div>
          <p class="text-sm text-gray-600">Bookmarks</p>
          <p class="text-2xl font-bold text-gray-900"><%= @bookmarks_count %></p>
        </div>
      </div>
    </div>
  </main>

  <%= render "shared/footer" %>
</div>
