<div class="min-h-screen bg-gray-50 flex flex-col">
  <!-- Header -->
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <%= link_to root_path, class: "hover:opacity-70" do %>
            <h1 class="text-4xl">ğŸ““</h1>
          <% end %>
          <p class="text-sm text-gray-600">Images and bookmarks</p>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-700"><%= Current.session.user.email_address %></span>
          <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-1 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <!-- Images Card -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-semibold text-gray-900">Images</h2>
          <span class="text-3xl">ğŸ–¼ï¸</span>
        </div>
        <p class="text-gray-600 text-sm mb-4">Upload and share images with short URLs</p>
        <div class="text-gray-400 text-sm">Coming soon</div>
      </div>

      <!-- Bookmarks Card -->
      <%= link_to bookmarks_path, class: "block" do %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow cursor-pointer">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold text-gray-900">Bookmarks</h2>
            <span class="text-3xl">ğŸ”–</span>
          </div>
          <p class="text-gray-600 text-sm mb-4">Save and organise web links with tags</p>
          <div class="flex items-center justify-between">
            <span class="text-blue-600 font-medium text-sm">View all â†’</span>
            <span class="text-2xl font-bold text-gray-900"><%= @bookmarks_count %></span>
          </div>
        </div>
      <% end %>

      <%= link_to bookmarklet_path, class: "block mt-4" do %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 hover:bg-blue-100 transition-colors">
          <p class="text-sm text-blue-900 text-center">
            <span class="font-medium">ğŸ’¡ Tip:</span> Install the browser bookmarklet for one-click saving â†’
          </p>
        </div>
      <% end %>
    </div>

    <!-- Quick Stats -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Stats</h3>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <p class="text-sm text-gray-600">Total Images</p>
          <p class="text-2xl font-bold text-gray-900">0</p>
        </div>
        <div>
          <p class="text-sm text-gray-600">Total Bookmarks</p>
          <p class="text-2xl font-bold text-gray-900"><%= @bookmarks_count %></p>
        </div>
      </div>
    </div>
  </main>

  <%= render "shared/footer" %>
</div>
