<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div>
          <%= link_to root_path, class: "hover:opacity-70" do %>
            <h1 class="text-2xl font-bold text-gray-900">Jotter</h1>
          <% end %>
        </div>
        <div class="flex items-center gap-4">
          <% if authenticated? %>
            <span class="text-sm text-gray-700"><%= Current.session.user.email_address %></span>
            <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
          <% else %>
            <%= link_to "Sign in", new_session_path, class: "text-sm text-blue-600 hover:text-blue-900 underline" %>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
      <h2 class="text-4xl font-bold text-gray-900 mb-6">About Jotter</h2>

      <div class="prose prose-gray max-w-none">
        <p class="text-lg text-gray-700 mb-4">
          This is a placeholder page. More details coming soon!
        </p>

        <p class="text-gray-600">
          Jotter is a simple way to manage bookmarks and images with short URLs.
        </p>
      </div>

      <div class="mt-8 pt-8 border-t border-gray-200">
        <%= link_to "â† Back to Home", root_path, class: "text-blue-600 hover:text-blue-800 underline" %>
      </div>
    </div>
  </main>
</div>
