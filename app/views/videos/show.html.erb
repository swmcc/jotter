<div class="min-h-screen bg-gray-50 flex flex-col">
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div>
          <%= link_to root_path, class: "hover:opacity-70" do %>
            <div class="w-10 h-10 text-gray-800">
              <%= image_tag "jotter.svg", class: "w-full h-full" %>
            </div>
          <% end %>
        </div>
        <div class="flex items-center gap-4">
          <% if authenticated? %>
            <span class="text-sm text-gray-700"><%= Current.session.user.email_address %></span>
            <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
          <% else %>
            <%= link_to "Sign in", new_session_path, class: "text-sm text-blue-600 hover:text-blue-900 underline" %>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <main class="flex-1 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
      <%= link_to @video.album ? album_path(@video.album) : videos_path, class: "text-gray-600 hover:text-gray-900 flex items-center gap-2" do %>
        <span>&larr;</span>
        <span><%= @video.album ? "Back to Album" : "Back to Videos" %></span>
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
          <% if @video.ready? && @video.transcoded.attached? %>
            <video
              controls
              class="w-full h-auto rounded"
              poster="<%= @video.poster.attached? ? url_for(@video.poster) : '' %>"
              preload="metadata">
              <source src="<%= url_for(@video.transcoded) %>" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          <% elsif @video.processing? %>
            <div class="aspect-video bg-gray-100 rounded flex items-center justify-center">
              <div class="text-center">
                <div class="text-4xl mb-4 animate-pulse">...</div>
                <p class="text-gray-600 font-medium">Video is being transcoded...</p>
                <p class="text-gray-500 text-sm mt-2">This may take a few minutes. Refresh to check progress.</p>
              </div>
            </div>
          <% elsif @video.failed? %>
            <div class="aspect-video bg-red-50 rounded flex items-center justify-center">
              <div class="text-center">
                <div class="text-4xl mb-4">!</div>
                <p class="text-red-600 font-medium">Video processing failed</p>
                <p class="text-red-500 text-sm mt-2">Please try uploading again.</p>
              </div>
            </div>
          <% else %>
            <div class="aspect-video bg-gray-100 rounded flex items-center justify-center">
              <p class="text-gray-600">Video not available</p>
            </div>
          <% end %>
        </div>

        <% if @video.is_public && @video.ready? %>
          <div class="mt-4 bg-white rounded-lg shadow-sm border border-gray-200 p-4">
            <h3 class="font-semibold text-gray-900 mb-2">Short URL</h3>
            <div class="flex items-center gap-3">
              <code class="flex-1 px-3 py-2 bg-gray-50 border border-gray-200 rounded text-sm font-mono text-gray-900">
                <%= media_short_url_url(@video.short_code) %>
              </code>
              <button onclick="navigator.clipboard.writeText('<%= media_short_url_url(@video.short_code) %>')" class="rounded bg-gray-600 hover:bg-gray-700 px-4 py-2 text-white text-sm font-medium transition-colors">
                Copy
              </button>
            </div>
            <p class="text-xs text-gray-500 mt-2">Share this URL to link directly to the video.</p>
          </div>
        <% end %>
      </div>

      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <div class="flex items-start justify-between mb-4">
            <h2 class="text-2xl font-bold text-gray-900"><%= @video.title %></h2>
            <% if authenticated? %>
              <div class="flex flex-col gap-2">
                <%= link_to "Edit", edit_video_path(@video), class: "rounded bg-gray-200 hover:bg-gray-300 px-3 py-1.5 text-sm text-gray-700 font-medium transition-colors text-center" %>
                <%= button_to "Delete", video_path(@video), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "rounded bg-red-600 hover:bg-red-700 px-3 py-1.5 text-sm text-white font-medium transition-colors" %>
              </div>
            <% end %>
          </div>

          <div class="space-y-4">
            <div>
              <p class="text-sm text-gray-600 mb-1">Status</p>
              <p class="text-gray-900">
                <% if @video.ready? %>
                  <span class="text-green-600">Ready</span>
                <% elsif @video.processing? %>
                  <span class="text-yellow-600">Processing...</span>
                <% elsif @video.failed? %>
                  <span class="text-red-600">Failed</span>
                <% end %>
                &middot;
                <%= @video.is_public ? "Public" : "Private" %>
              </p>
            </div>

            <% if @video.duration_seconds %>
              <div>
                <p class="text-sm text-gray-600 mb-1">Duration</p>
                <p class="text-gray-900"><%= @video.formatted_duration %></p>
              </div>
            <% end %>

            <% if @video.width && @video.height %>
              <div>
                <p class="text-sm text-gray-600 mb-1">Resolution</p>
                <p class="text-gray-900"><%= @video.width %> &times; <%= @video.height %></p>
              </div>
            <% end %>

            <% if @video.album %>
              <div>
                <p class="text-sm text-gray-600 mb-1">Album</p>
                <%= link_to @video.album.title, album_path(@video.album), class: "text-blue-600 hover:underline" %>
              </div>
            <% end %>

            <% if @video.description.present? %>
              <div>
                <p class="text-sm text-gray-600 mb-1">Description</p>
                <p class="text-gray-900"><%= @video.description %></p>
              </div>
            <% end %>

            <% if @video.tags.any? %>
              <div>
                <p class="text-sm text-gray-600 mb-2">Tags</p>
                <div class="flex flex-wrap gap-2">
                  <% @video.tags.each do |tag| %>
                    <%= link_to tag.name, videos_path(tag: tag.name), class: "inline-block px-3 py-1 text-sm rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors" %>
                  <% end %>
                </div>
              </div>
            <% end %>

            <div>
              <p class="text-sm text-gray-600 mb-1">Uploaded</p>
              <p class="text-gray-900 text-sm"><%= @video.created_at.strftime("%d %b %Y at %H:%M") %></p>
            </div>

            <% if authenticated? && @video.ready? && @video.transcoded.attached? %>
              <div class="pt-4 border-t border-gray-200">
                <%= link_to "Download", rails_blob_path(@video.transcoded, disposition: "attachment"), class: "block w-full text-center rounded bg-blue-600 hover:bg-blue-700 px-4 py-2 text-white font-medium transition-colors" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%= render "shared/footer" %>
</div>
