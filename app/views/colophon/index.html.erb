              <span>View on GitHub</span>
            <% end %>
          </div>
        </section>
      </div>

      <div class="mt-8 pt-8 border-t border-gray-200">
        <%= link_to "‚Üê Back to Home", root_path, class: "text-blue-600 hover:text-blue-800 underline" %>
      </div>
    </div>
  </main>

  <%= render "shared/footer" %>
</div>
