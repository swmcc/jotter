<div class="min-h-screen bg-gray-50 flex flex-col">
<div class="flex-1 flex items-center justify-center px-4">
  <div class="max-w-4xl w-full">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-8xl mb-3">üìì</h1>
      <p class="text-xl text-gray-600">swmcc's personal jotter for the web</p>
    </div>

    <!-- Main Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <!-- Bookmarks Card -->
      <%= link_to bookmarks_path, class: "block group h-full" do %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 hover:shadow-lg hover:border-blue-300 transition-all duration-200 h-full flex items-center">
          <div class="text-center w-full">
            <div class="text-8xl mb-6">üîñ</div>
            <h2 class="text-3xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">Bookmarks</h2>
            <p class="text-gray-600">Browse the public collection</p>
          </div>
        </div>
      <% end %>

      <!-- Galleries Card -->
      <%= link_to galleries_path, class: "block group h-full" do %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 hover:shadow-lg hover:border-blue-300 transition-all duration-200 h-full flex items-center">
          <div class="text-center w-full">
            <div class="text-8xl mb-6">üñºÔ∏è</div>
            <h2 class="text-3xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">Galleries</h2>
            <p class="text-gray-600">Explore photo galleries</p>
          </div>
        </div>
      <% end %>

      <!-- Quick Uploads Card -->
      <%= link_to view_uploads_path, class: "block group h-full" do %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 hover:shadow-lg hover:border-blue-300 transition-all duration-200 h-full flex items-center">
          <div class="text-center w-full">
            <div class="text-8xl mb-6">üì∏</div>
            <h2 class="text-3xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">Quick Uploads</h2>
            <p class="text-gray-600">Public quick-upload photos</p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sign In Link -->
    <div class="text-center">
      <% if authenticated? %>
        <%= link_to "Go to Dashboard", dashboard_path, class: "text-blue-600 hover:text-blue-800 underline" %>
      <% else %>
        <%= link_to "Sign in", new_session_path, class: "text-blue-600 hover:text-blue-800 underline" %>
      <% end %>
    </div>

  </div>
</div>

<%= render "shared/footer" %>
</div>
