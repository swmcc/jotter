<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4">
  <div class="max-w-4xl w-full">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-6xl font-bold text-gray-900 mb-3">Jotter</h1>
      <p class="text-xl text-gray-600">Images and bookmarks, made simple</p>
    </div>

    <!-- Main Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <!-- Bookmarks Card -->
      <%= link_to bookmarks_path, class: "block group" do %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 hover:shadow-lg hover:border-blue-300 transition-all duration-200">
          <div class="text-center">
            <div class="text-8xl mb-6">üîñ</div>
            <h2 class="text-3xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">Bookmarks</h2>
            <p class="text-gray-600">Save and organise web links with tags</p>
          </div>
        </div>
      <% end %>

      <!-- Images Card (Coming Soon) -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 opacity-50">
        <div class="text-center">
          <div class="text-8xl mb-6">üñºÔ∏è</div>
          <h2 class="text-3xl font-bold text-gray-900 mb-3">Images</h2>
          <p class="text-gray-600">Upload and share with short URLs</p>
          <p class="text-sm text-gray-400 mt-4">Coming soon</p>
        </div>
      </div>
    </div>

    <!-- Sign In Link -->
    <div class="text-center">
      <% if authenticated? %>
        <%= link_to "Go to Dashboard", dashboard_path, class: "text-blue-600 hover:text-blue-800 underline" %>
      <% else %>
        <%= link_to "Sign in", new_session_path, class: "text-blue-600 hover:text-blue-800 underline" %>
      <% end %>
    </div>

    <!-- Footer -->
    <div class="mt-12 text-center text-xs text-gray-500">
      <p>A SkillfulGorilla project</p>
    </div>
  </div>
</div>
