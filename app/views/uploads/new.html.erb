<div class="min-h-screen bg-gray-50 flex flex-col">
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div>
          <%= link_to root_path, class: "hover:opacity-70" do %>
            <div class="w-10 h-10 text-gray-800">
              <%= image_tag "jotter.svg", class: "w-full h-full" %>
            </div>
          <% end %>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-700"><%= Current.session.user.email_address %></span>
          <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
        </div>
      </div>
    </div>
  </header>

  <main class="flex-1 max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full">
    <div class="mb-6">
      <%= link_to dashboard_path, class: "text-gray-600 hover:text-gray-900 flex items-center gap-2" do %>
        <span>‚Üê</span>
        <span>Back to Dashboard</span>
      <% end %>
    </div>

    <% if notice %>
      <div class="mb-6 rounded bg-green-50 border border-green-200 p-4">
        <p class="text-green-800"><%= notice %></p>
      </div>
    <% end %>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">Quick Upload</h2>
        <p class="text-gray-600">Drop a photo and go. It'll use the filename as the title.</p>
      </div>

      <%= form_with(model: @photo, url: uploads_path, class: "space-y-6", data: { controller: "photo-upload" }) do |form| %>
        <% if @photo.errors.any? %>
          <div class="rounded bg-red-50 border border-red-200 p-4">
            <h3 class="text-red-800 font-semibold mb-2"><%= pluralize(@photo.errors.count, "error") %> prevented upload:</h3>
            <ul class="list-disc list-inside text-red-700 text-sm">
              <% @photo.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Drag and Drop Zone -->
        <div
          data-photo-upload-target="dropzone"
          class="border-2 border-dashed border-gray-300 rounded-lg p-12 text-center transition-colors cursor-pointer hover:border-gray-400">

          <%= form.file_field :image,
              required: true,
              accept: "image/jpeg,image/jpg,image/png,image/gif,image/webp",
              class: "hidden",
              data: {
                photo_upload_target: "input",
                action: "change->photo-upload#handleFileSelect"
              } %>

          <div class="space-y-4" onclick="this.closest('[data-photo-upload-target=dropzone]').querySelector('input[type=file]').click()">
            <div class="text-8xl">üì∏</div>
            <div>
              <p class="text-xl font-medium text-gray-700">Drop your photo here or click to browse</p>
              <p class="text-gray-500 mt-2">JPG, PNG, GIF, or WebP (max 10MB)</p>
            </div>

            <!-- Preview -->
            <img data-photo-upload-target="preview" class="hidden mx-auto max-h-64 rounded shadow-lg" />

            <!-- Filename -->
            <p data-photo-upload-target="filename" class="hidden text-lg text-gray-700 font-semibold mt-4"></p>
          </div>
        </div>

        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <p class="text-sm text-blue-800">
            üí° <strong>Tip:</strong> The filename will be used as the title. You can edit it later if needed.
            Photos go into your "Uploads" album.
          </p>
        </div>

        <!-- Optional fields (collapsed) -->
        <details class="border border-gray-200 rounded-lg">
          <summary class="px-4 py-3 cursor-pointer hover:bg-gray-50 text-gray-700 font-medium">
            Optional: Add title, description, or make public
          </summary>
          <div class="p-4 space-y-4 border-t border-gray-200">
            <div>
              <%= form.label :title, "Custom Title (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :title,
                  placeholder: "Leave blank to use filename",
                  class: "block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" %>
            </div>

            <div>
              <%= form.label :description, "Description (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_area :description,
                  rows: 2,
                  placeholder: "Add a description...",
                  class: "block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" %>
            </div>

            <div class="flex items-center gap-3">
              <%= form.check_box :is_public, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
              <%= form.label :is_public, "Make this photo public", class: "text-sm font-medium text-gray-700" %>
            </div>
          </div>
        </details>

        <div>
          <%= form.submit "Upload Photo", class: "w-full rounded bg-blue-600 hover:bg-blue-700 px-6 py-3 text-white text-lg font-medium cursor-pointer transition-colors" %>
        </div>
      <% end %>
    </div>
  </main>

  <%= render "shared/footer" %>
</div>
