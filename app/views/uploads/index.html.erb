<div class="min-h-screen bg-gray-50 flex flex-col">
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div>
          <%= link_to root_path, class: "hover:opacity-70" do %>
            <div class="w-10 h-10 text-gray-800">
              <%= image_tag "jotter.svg", class: "w-full h-full" %>
            </div>
          <% end %>
        </div>
        <div class="flex items-center gap-4">
          <% if authenticated? %>
            <span class="text-sm text-gray-700"><%= Current.session.user.email_address %></span>
            <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
          <% else %>
            <%= link_to "Sign in", new_session_path, class: "text-sm text-blue-600 hover:text-blue-900 underline" %>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <main class="flex-1 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
      <%= link_to dashboard_path, class: "text-gray-600 hover:text-gray-900 flex items-center gap-2" do %>
        <span>&larr;</span>
        <span>Back to Dashboard</span>
      <% end %>
    </div>

    <div class="mb-8">
      <h2 class="text-4xl font-bold text-gray-900 mb-3">My Quick Uploads</h2>
      <p class="text-gray-600 text-lg">All your photos and videos uploaded via /u</p>
    </div>

    <% total_count = @photos.count + @videos.count %>

    <% if total_count > 0 %>
      <div class="mb-6 flex items-center justify-between">
        <p class="text-gray-600">
          <%= pluralize(@photos.count, 'photo') %>, <%= pluralize(@videos.count, 'video') %>
        </p>
        <%= link_to "Upload Another", uploads_path, class: "rounded bg-blue-600 hover:bg-blue-700 px-4 py-2 text-white font-medium transition-colors" %>
      </div>

      <% if @videos.any? %>
        <div class="mb-8">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Videos</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <% @videos.each do |video| %>
              <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                <%= link_to video_path(video), class: "group block" do %>
                  <div class="aspect-video bg-gray-200 relative overflow-hidden">
                    <% if video.poster.attached? %>
                      <%= image_tag video.poster, class: "w-full h-full object-cover" %>
                    <% else %>
                      <div class="w-full h-full flex items-center justify-center text-4xl">
                        <% if video.processing? %>
                          <span class="animate-pulse">...</span>
                        <% elsif video.failed? %>
                          <span>!</span>
                        <% else %>
                          <span>?</span>
                        <% end %>
                      </div>
                    <% end %>
                    <% if video.ready? && video.formatted_duration %>
                      <div class="absolute bottom-2 right-2 bg-black/70 text-white text-xs px-1.5 py-0.5 rounded">
                        <%= video.formatted_duration %>
                      </div>
                    <% end %>
                    <% if video.processing? %>
                      <div class="absolute inset-0 bg-black/50 flex items-center justify-center">
                        <span class="text-white text-sm font-medium">Processing...</span>
                      </div>
                    <% elsif video.failed? %>
                      <div class="absolute inset-0 bg-red-500/50 flex items-center justify-center">
                        <span class="text-white text-sm font-medium">Failed</span>
                      </div>
                    <% end %>
                    <div class="absolute top-2 right-2">
                      <% if video.is_public %>
                        <span class="inline-block px-2 py-1 text-xs rounded bg-green-500 text-white font-medium">
                          Public
                        </span>
                      <% else %>
                        <span class="inline-block px-2 py-1 text-xs rounded bg-gray-800 text-white font-medium">
                          Private
                        </span>
                      <% end %>
                    </div>
                  </div>
                  <div class="p-3">
                    <p class="text-sm font-medium text-gray-900 group-hover:text-blue-600 transition-colors truncate mb-1">
                      <%= video.title %>
                    </p>
                  </div>
                <% end %>

                <% if video.is_public && video.ready? %>
                  <div class="px-3 pb-3">
                    <div class="flex items-center gap-2">
                      <input
                        type="text"
                        value="<%= media_short_url_url(video.short_code) %>"
                        readonly
                        class="flex-1 px-2 py-1 text-xs bg-gray-50 border border-gray-200 rounded font-mono text-gray-700"
                        onclick="this.select()"
                      />
                      <button
                        onclick="navigator.clipboard.writeText('<%= media_short_url_url(video.short_code) %>'); this.textContent = 'Done'; setTimeout(() => this.textContent = 'Copy', 1000)"
                        class="px-2 py-1 text-xs bg-gray-600 hover:bg-gray-700 text-white rounded transition-colors"
                      >
                        Copy
                      </button>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @photos.any? %>
        <div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Photos</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <% @photos.each do |photo| %>
              <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                <%= link_to photo_path(photo), class: "group block" do %>
                  <div class="aspect-square bg-gray-200 relative overflow-hidden">
                    <% if photo.image.attached? %>
                      <%= image_tag photo.thumbnail, class: "w-full h-full object-cover" %>
                    <% end %>
                    <div class="absolute top-2 right-2">
                      <% if photo.is_public %>
                        <span class="inline-block px-2 py-1 text-xs rounded bg-green-500 text-white font-medium">
                          Public
                        </span>
                      <% else %>
                        <span class="inline-block px-2 py-1 text-xs rounded bg-gray-800 text-white font-medium">
                          Private
                        </span>
                      <% end %>
                    </div>
                  </div>
                  <div class="p-3">
                    <p class="text-sm font-medium text-gray-900 group-hover:text-blue-600 transition-colors truncate mb-1">
                      <%= photo.title %>
                    </p>
                    <% if photo.tags.any? %>
                      <div class="flex flex-wrap gap-1 mt-2">
                        <% photo.tags.take(3).each do |tag| %>
                          <span class="inline-block px-2 py-0.5 text-xs rounded-full bg-gray-100 text-gray-600">
                            <%= tag.name %>
                          </span>
                        <% end %>
                        <% if photo.tags.count > 3 %>
                          <span class="inline-block px-2 py-0.5 text-xs rounded-full bg-gray-100 text-gray-600">
                            +<%= photo.tags.count - 3 %>
                          </span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>

                <% if photo.is_public %>
                  <div class="px-3 pb-3">
                    <div class="flex items-center gap-2">
                      <input
                        type="text"
                        value="<%= media_short_url_url(photo.short_code) %>"
                        readonly
                        class="flex-1 px-2 py-1 text-xs bg-gray-50 border border-gray-200 rounded font-mono text-gray-700"
                        onclick="this.select()"
                      />
                      <button
                        onclick="navigator.clipboard.writeText('<%= media_short_url_url(photo.short_code) %>'); this.textContent = 'Done'; setTimeout(() => this.textContent = 'Copy', 1000)"
                        class="px-2 py-1 text-xs bg-gray-600 hover:bg-gray-700 text-white rounded transition-colors"
                      >
                        Copy
                      </button>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
        <div class="text-6xl mb-4">...</div>
        <p class="text-xl text-gray-600 mb-2">No uploads yet</p>
        <p class="text-gray-500">Photos and videos you upload via /u will appear here</p>
        <div class="mt-6">
          <%= link_to "Upload your first file", uploads_path, class: "inline-block rounded bg-blue-600 hover:bg-blue-700 px-6 py-3 text-white font-medium transition-colors" %>
        </div>
      </div>
    <% end %>
  </main>

  <%= render "shared/footer" %>
</div>
