<div class="min-h-screen bg-gray-50 flex flex-col">
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div>
          <%= link_to root_path, class: "hover:opacity-70" do %>
            <h1 class="text-4xl">ðŸ““</h1>
          <% end %>
        </div>
        <div class="flex items-center gap-4">
          <% if authenticated? %>
            <span class="text-sm text-gray-700"><%= Current.session.user.email_address %></span>
            <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
          <% else %>
            <%= link_to "Sign in", new_session_path, class: "text-sm text-blue-600 hover:text-blue-900 underline" %>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <main class="flex-1 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8 text-center">
      <h2 class="text-4xl font-bold text-gray-900 mb-3">ðŸ“¸ Quick Uploads</h2>
      <p class="text-gray-600 text-lg">Public photos uploaded via /u</p>
    </div>

    <% if @photos.any? %>
      <div class="mb-6 text-center">
        <p class="text-gray-600"><%= pluralize(@photos.count, 'photo') %> available</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% @photos.each do |photo| %>
          <%= link_to photo_path(photo), class: "group" do %>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
              <div class="aspect-square bg-gray-200 relative overflow-hidden">
                <% if photo.image.attached? %>
                  <%= image_tag photo.thumbnail, class: "w-full h-full object-cover" %>
                <% end %>
              </div>
              <div class="p-3">
                <p class="text-sm font-medium text-gray-900 group-hover:text-blue-600 transition-colors truncate mb-1">
                  <%= photo.title %>
                </p>
                <% if photo.tags.any? %>
                  <div class="flex flex-wrap gap-1 mt-2">
                    <% photo.tags.take(3).each do |tag| %>
                      <span class="inline-block px-2 py-0.5 text-xs rounded-full bg-gray-100 text-gray-600">
                        <%= tag.name %>
                      </span>
                    <% end %>
                    <% if photo.tags.count > 3 %>
                      <span class="inline-block px-2 py-0.5 text-xs rounded-full bg-gray-100 text-gray-600">
                        +<%= photo.tags.count - 3 %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
        <div class="text-6xl mb-4">ðŸ“¸</div>
        <p class="text-xl text-gray-600 mb-2">No public uploads yet</p>
        <p class="text-gray-500">Photos uploaded via /u and marked public will appear here</p>
        <% if authenticated? %>
          <div class="mt-6">
            <%= link_to "Upload a photo", uploads_path, class: "inline-block rounded bg-blue-600 hover:bg-blue-700 px-6 py-3 text-white font-medium transition-colors" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </main>

  <%= render "shared/footer" %>
</div>
