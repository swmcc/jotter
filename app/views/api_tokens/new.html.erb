<div class="min-h-screen bg-gray-50 flex flex-col">
  <!-- Header -->
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <%= link_to root_path, class: "hover:opacity-70" do %>
            <h1 class="text-4xl">ðŸ““</h1>
          <% end %>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-700"><%= Current.session.user.email_address %></span>
          <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-1 max-w-xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full">
    <div class="mb-6">
      <%= link_to "â† Back to tokens", api_tokens_path, class: "text-blue-600 hover:underline" %>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Create API Token</h2>

      <%= form_with model: @api_token, class: "space-y-6" do |f| %>
        <% if @api_token.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <ul class="list-disc list-inside text-red-700 text-sm">
              <% @api_token.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :name, "Token Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :name, placeholder: "e.g., CLI on MacBook", class: "block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none" %>
          <p class="text-sm text-gray-500 mt-1">A name to help you remember what this token is for</p>
        </div>

        <div class="flex gap-3">
          <%= f.submit "Create Token", class: "rounded bg-blue-600 hover:bg-blue-700 px-4 py-2 text-white font-medium cursor-pointer transition-colors" %>
          <%= link_to "Cancel", api_tokens_path, class: "rounded bg-gray-200 hover:bg-gray-300 px-4 py-2 text-gray-700 font-medium transition-colors" %>
        </div>
      <% end %>
    </div>
  </main>

  <%= render "shared/footer" %>
</div>
