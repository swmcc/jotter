<div class="min-h-screen bg-gray-50 flex flex-col">
  <!-- Header -->
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <%= link_to root_path, class: "hover:opacity-70" do %>
            <div class="w-10 h-10 text-gray-800">
              <%= image_tag "jotter.svg", class: "w-full h-full" %>
            </div>
          <% end %>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-700"><%= Current.session.user.email_address %></span>
          <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-1 max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full">
    <!-- Flash Messages -->
    <% if flash[:new_token].present? %>
      <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
        <p class="text-green-800 font-medium mb-2">Your new API token (copy it now - you won't see it again!):</p>
        <div class="flex items-center gap-2">
          <code class="flex-1 bg-white border border-green-300 rounded px-3 py-2 text-sm font-mono break-all"><%= flash[:new_token] %></code>
          <button onclick="navigator.clipboard.writeText('<%= flash[:new_token] %>'); this.textContent='Copied!'; setTimeout(() => this.textContent='Copy', 2000)" class="rounded bg-green-600 hover:bg-green-700 px-4 py-2 text-white font-medium transition-colors">
            Copy
          </button>
        </div>
      </div>
    <% end %>

    <!-- Page Header -->
    <div class="mb-6 flex items-center justify-between">
      <div>
        <h2 class="text-3xl font-bold text-gray-900">API Tokens</h2>
        <p class="text-gray-600 mt-1">Manage tokens for CLI and API access</p>
      </div>
      <%= link_to "New Token", new_api_token_path, class: "rounded bg-blue-600 hover:bg-blue-700 px-4 py-2 text-white font-medium transition-colors" %>
    </div>

    <!-- Tokens List -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <% if @api_tokens.any? %>
        <ul class="divide-y divide-gray-200">
          <% @api_tokens.each do |token| %>
            <li class="p-4 flex items-center justify-between">
              <div>
                <p class="font-medium text-gray-900"><%= token.name %></p>
                <p class="text-sm text-gray-500">
                  Created <%= token.created_at.strftime("%d %b %Y") %>
                  <% if token.last_used_at %>
                    · Last used <%= time_ago_in_words(token.last_used_at) %> ago
                  <% else %>
                    · Never used
                  <% end %>
                </p>
              </div>
              <%= button_to "Revoke", api_token_path(token), method: :delete, data: { turbo_confirm: "Are you sure you want to revoke this token?" }, class: "rounded bg-red-600 hover:bg-red-700 px-3 py-1.5 text-sm text-white font-medium transition-colors" %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="p-8 text-center">
          <p class="text-gray-600">No API tokens yet</p>
          <p class="text-sm text-gray-500 mt-1">Create a token to use with the CLI</p>
        </div>
      <% end %>
    </div>

    <!-- Usage Instructions -->
    <div class="mt-8 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="font-semibold text-gray-900 mb-3">Using the API</h3>
      <p class="text-sm text-gray-600 mb-4">Include your token in the Authorization header:</p>
      <pre class="bg-gray-900 text-green-400 rounded-lg p-4 text-sm overflow-x-auto"><code>curl -H "Authorization: Bearer YOUR_TOKEN" \
     -H "Accept: application/json" \
     <%= bookmarks_url %>.json</code></pre>
    </div>
  </main>

  <%= render "shared/footer" %>
</div>
